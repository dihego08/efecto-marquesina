<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#333"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#333"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/actionEvent"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:text="Marquesina Vertical"
                android:layout_marginBottom="15sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />
            <ScrollView android:layout_height="350dp"
                android:layout_width="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:id="@+id/sc"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#f9f9f9"
                    android:lineSpacingExtra="20dp"
                    android:textSize="20dp"
                    android:id="@+id/tv" />
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/mas"
                    android:background="@drawable/btn_mas"
                    android:text="+"></Button>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/start"
                    android:background="@drawable/btn_start"
                    android:src="@drawable/ic_action_start"></ImageButton>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/pause"
                    android:background="@drawable/btn_pausa"
                    android:src="@drawable/ic_action_pause"
                    android:text="P"></ImageButton>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/menos"
                    android:background="@drawable/btn_menos"
                    android:text="-"></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>